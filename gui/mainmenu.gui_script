local function screenLoadedResumeGame()
	msg.post("game:/game#game", CO.MESSAGE_RESUMEGAME)
	MO.show(hash(CO.SCREEN_GAME))
end

local function screenLoadedNewGame()
	msg.post("game:/game#game", CO.MESSAGE_NEWGAME)
	MO.show(hash(CO.SCREEN_GAME))
end

function on_input(self, action_id, action)
	local group = GO.group("group1", function()
		GO.button(CO.GUI_NEWGAME, action_id, action, function(button)
			MO.preload(CO.SCREEN_GAME, screenLoadedNewGame)
		end)
		GO.button(CO.GUI_RESUMEGAME, action_id, action, function(button)
			MO.preload(CO.SCREEN_GAME, screenLoadedResumeGame)
		end)
		GO.button(CO.GUI_SETTINGS, action_id, action, function(button)
			MO.show(hash(CO.SCREEN_SETTINGS))
		end)
		GO.button(CO.GUI_ABOUT, action_id, action, function(button)
			local t = {board={}}
			t.board[-1] = 1
			t.board[0] = 2
			t.board[1] = 3
			print("table contents")
			pprint(t)
			local filename = sys.get_save_file("paragonredux", "test")
			sys.save(filename, t)
			local loadedTable = sys.load(filename)
			print("table contents after load")
			pprint(loadedTable)

			MA.resetState()
			MA.saveGame()
			MA.saveSettings()
		end)

		
	end)
	return group.consumed
end

