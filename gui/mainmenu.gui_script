function init(self)
	GO.acquire_input()
	msg.post(".", "acquire_input_focus")

	if(MA.isSettingsExists()) then
		print("settings exists")
		MA.loadSettings()
	end

	local pos
	if(MA.isSaveGameExists()) then
		print("savegame exists")
		pos = vmath.vector3(540, 1460, 0)
	else
		-- move button offscreen
		print("savegame does not exists")
		pos = vmath.vector3(3000, 1460, 0)
	end
	local node = gui.get_node(CO.GUI_RESUMEGAME)
	gui.set_position(node, pos)
end

